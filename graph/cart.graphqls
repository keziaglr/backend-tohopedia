type Cart{
    id: Int!
    user_id: Int!
    product_id: Int!
    qty: Int!
    note: String!

    product: Product!
    user: User!

    createdAt: Time!
    updatedAt: Time!
    deletedAt: Time!
}

extend type Mutation{
    createCart(userId: Int!, productId: Int!, qty: Int!, note: String!) : Cart!
    deleteCart(userId: Int!, productId: Int!) : Cart!
    checkout(userId: Int!, productId: [Int!]!) : String!
}

extend type Query{
    carts(userId: Int!): [Product]
    carts2(userId: Int!): [Cart]
}